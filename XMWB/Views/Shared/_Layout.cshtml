<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/js")
</head>
<body>

    <div class="container body-content">
        @RenderBody()
        
        <footer>
            <!--↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓4列菜单开始↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓↓-->
            <div class="btn3 clearfix">

                <div class="menu">
                    <div class="bt-name"><a href="javascript:;">首页</a></div>
                </div><!--menu-->


                <div class="menu">
                    <div class="bt-name">我的</div>
                    <div class="sanjiao"></div>
                    <div class="new-sub">
                        <ul>
                            <li><a href="javascript:;">我的发布</a></li>
                            <li><a href="javascript:;">会员中心</a></li>
                            <li><a href="javascript:;">我的广告</a></li>
                            <li><a href="javascript:;">信息中心</a></li>
                            <li><a href="javascript:;">使用手册</a></li>
                        </ul>
                        <div class="tiggle"></div>
                        <div class="innertiggle"></div>
                    </div>

                </div><!--menu-->


                <div class="menu">
                    <div class="bt-name">新建</div>
                    <div class="sanjiao"></div>
                    <div class="new-sub">
                        <ul>
                            <li><a href="javascript:;">新建广告</a></li>
                            <li><a href="javascript:;">我的链接</a></li>
                            <li><a href="javascript:;">自建文章</a></li>
                        </ul>
                        <div class="tiggle"></div>
                        <div class="innertiggle"></div>
                    </div>
                </div><!--menu-->

                <div class="menu">
                    <div class="bt-name">返回</div>
                </div>
                <!--menu-->
            </div><!--btn3-->
            <!--↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑↑4列菜单end↑↑↑↑↑↑↑↑↑↑↑↑↑↑-->
            <script type="text/javascript">
            //弹出垂直菜单
            $(".menu").click(function () {
                if ($(this).hasClass("cura")) {
                    $(this).children(".new-sub").hide(); //当前菜单下的二级菜单隐藏
                    $(".menu").removeClass("cura"); //同一级的菜单项
                } else {
                    $(".menu").removeClass("cura"); //移除所有的样式
                    $(this).addClass("cura"); //给当前菜单添加特定样式
                    $(".menu").children(".new-sub").slideUp("fast"); //隐藏所有的二级菜单
                    $(this).children(".new-sub").slideDown("fast"); //展示当前的二级菜单
                }
            });
            </script>
        </footer>

    </div>

</body>
</html>
